<p id="notice"><%= notice %></p>

<h1>Bikes</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Gender</th>
      <th>Colour</th>
      <th>Type</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Image url</th>
      <th>Location</th>
      <th>Availability</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.size %></td>
        <td><%= bike.gender %></td>
        <td><%= bike.colour %></td>
        <td><%= bike.type %></td>
        <td><%= bike.price %></td>
        <td><%= bike.brand %></td>
        <td><%= bike.image_url %></td>
        <td><%= bike.location %></td>
        <td><%= bike.availability %></td>
        <td><%= bike.model %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
